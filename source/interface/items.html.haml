  - 20.times do |i|
    .row
      .capped
        .col-md-12
          .unit.bordered.clearfix
            .col-xl-9
              %div
                %strong
                  %a{ href: "/interface/item" }
                    Simen Johan
            .col-xl-3.index-action
              %a{ href: "/interface/item" }
                %span
                  Add an artist

  .row
    .capped
      .col-md-12
        .custom-pagination
          .col-xs-4.text-left.previous-arrow
            %a{ href: "/interface/item" }
              %span.previous-arrow-icon.pull-left
                &laquo;
              %span.hidden-xs.pull-left
                Previous Page
          .col-xs-4.text-center
            Page 1 of 3
          .col-xs-4.text-right.next-arrow
            %a{ href: "/interface/item" }
              %span.next-arrow-icon.pull-right
                &raquo;
              %span.hidden-xs.pull-right
                Next Page


