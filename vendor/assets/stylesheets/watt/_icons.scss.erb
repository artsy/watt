// NEW Artsy Partner Engineering Icons
[class^='pe-'], [class*=" pe-"] {
  display: inline-block;
  position: relative;
}

.pe-left-arrow {
  border-bottom: 2px solid $black;
  border-left: 2px solid $black;
  height: 8px;
  width: 8px;
  @include transform(rotate(45deg));
}

.pe-right-arrow {
  border-top: 2px solid $black;
  border-right: 2px solid $black;
  height: 8px;
  width: 8px;
  @include transform(rotate(45deg));
}

.larger-arrow {
  border-width: 3px;
  height: 12px;
  margin: 0 5px 0 5px;
  width: 12px;
}

.pe-checkmark {
  border-bottom: 3px solid $black;
  border-left: 3px solid $black;
  height: 8px;
  margin-right: 25px;
  width: 16px;
  @include transform(rotate(-45deg));
}
