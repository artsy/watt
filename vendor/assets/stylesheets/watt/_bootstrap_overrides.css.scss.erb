body {
  main.full-width { #content-wrap {padding: 80px 0 0 0;} }
  .navbar a,
  .nav-tabs a {
    text-transform: uppercase;
    font-family: $sans-serif;
  }
  .nav-tabs {
    font-size:12px;
    text-transform: uppercase;
    font-family: $sans-serif;
    a {
      background-color:#eee;
      border-color: #ddd;
      &:hover {
        background-color:white;
      }
    }
  }
}

body form {
  h5 {
    font-size:13px;
    text-transform: uppercase;
    font-family: $sans-serif;
    margin:0 0 30px;
    padding: 0;
  }
  label {
    font-weight: normal;
    span {
      color: red;
    }
  }
  .form-group.bordered {
    border-top: 2px solid #eee;
    padding:7px 0px 0 0;
  }
  select {
    max-width: 100%;
  }
}

header.navbar .navbar-header {
  a.navbar-brand {
    background-image:url('<%= asset_url 'watt/artsy_mark_transparent_black-70x70.png' %>');
    background-position: center !important;
    background-repeat: no-repeat !important;
    background-size: contain !important;
    text-indent:-999px;
    width: 35px;
    height: 35px;
    padding:0;
    margin-top:10px;
    margin-left:15px;
    margin-right:15px;
  }
}

header.navbar.navbar-inverse .navbar-header {
  a.navbar-brand {
    background-image:url('<%= asset_url 'watt/artsy_mark_transparent_white-70x70.png' %>');
  }
}

.page-title h2 a {
  background:transparent url('<%= asset_url 'watt/backarrow-34x23.png' %>') top left no-repeat !important;
  background-position: 18px 18px !important;
  background-repeat: no-repeat !important;
  background-size: 17px 12px !important;
}
.index-action a {
  background:transparent url('<%= asset_url 'watt/arrow-18x33.png' %>') top left no-repeat !important;
  background-position: center !important;
  background-repeat: no-repeat !important;
  background-size: contain !important;
  width: 33px !important;
  height: 18px !important;
}



#navbar-search {
  .form-inline .form-group, .navbar-form .form-group {
    display: block;
  }
}
@media (min-width:768px) {
  .form-inline .form-group, .navbar-form .form-group {
    display: block;
  }
}
header.navbar li a {
  font-size: 13px;
}
@media (min-width:992px) {
  header.navbar li a {
    font-size: 13px;
  }
  #navbar-search {
    width: 600px;
    input {
      width: 600px;
    }
  }
}



// Alert overrides
.alert-below-title {
  margin: 15px 0 0 0;
}
