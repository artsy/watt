body {
  main.full-width { #content-wrap {padding: 80px 0 0 0;} }
  .navbar a,
  .nav-tabs a {
    text-transform: uppercase;
    font-family: $sans-serif;
  }
  .nav-tabs {
    border-color: $gray;
    font-size:12px;
    text-transform: uppercase;
    font-family: $sans-serif;
    &.active {
      border-color: $gray;
    }
    a {
    }
  }
}

.nav-tabs {
  margin-bottom: 20px;
  > li { 
    &:first-of-type {
      margin-left: 2px;
    }
    > a {
      background-color: $gray-lighter;
      border-color: $gray;
      border-radius: 5px 5px 0 0;
      margin-right: 4px;
      &:hover {
        background-color: $white;
      }
    }
  }
}

body form {
  h5 {
    font-size:13px;
    text-transform: uppercase;
    font-family: $sans-serif;
    margin:0 0 30px;
    padding: 0;
  }
  label {
    font-weight: normal;
    span[title='required'] {
      color: $red;
    }
  }
  .form-group.bordered {
    border-top: 2px solid $gray-lightest;
    padding:7px 0px 0 0;
  }
  select {
    max-width: 100%;
  }
}

header.navbar .navbar-header {
  a.navbar-brand {
    @extend .with-icon;
    @extend .icon-mark;
    color: $black;
    font-size: 35px;
    height: 35px;
    margin-top:10px;
    margin-left:15px;
    margin-right:15px;
    padding:0;
    width: 35px;
  }
}

header.navbar.navbar-inverse {
  .application-home {
    a {
      font-family: $serif;
      color: white;
      text-transform: none;
      font-size: 18px;
    }
  }
  .navbar-header {
    a.navbar-brand {
      color: $white;
    }
  }
}



.page-title h2 a {
  background:transparent url('<%= asset_url 'watt/backarrow-34x23.png' %>') top left no-repeat !important;
  background-position: 18px 18px !important;
  background-repeat: no-repeat !important;
  background-size: 17px 12px !important;
}
.index-action a {
  background:transparent url('<%= asset_url 'watt/arrow-18x33.png' %>') top left no-repeat !important;
  background-position: center !important;
  background-repeat: no-repeat !important;
  background-size: contain !important;
  width: 33px !important;
  height: 18px !important;
}

#navbar-search {
  .form-inline .form-group, .navbar-form .form-group {
    display: block;
  }
}
@media (min-width:768px) {
  .form-inline .form-group, .navbar-form .form-group {
    display: block;
  }
}
header.navbar li a {
  font-size: 12px;
}

@media (min-width:992px) {
  header.navbar li a {
    font-size: 13px;
  }
  #navbar-search {
    width: 600px;
    input {
      width: 600px;
    }
  }
}



// Alert overrides
.alert-below-title {
  margin: 15px 0 0 0;
}

.alert-below-tabs {
  margin: 0 0 15px 0;
}
