.fancybox-wrap {
  .unit { 
    @extend .single-padding;
  }
}

.fancybox-inner {
  h2 {
    @extend .single-padding-bottom;
    @extend .single-margin-bottom;
    font-size:22px;
    line-height: 22px;
    font-family:$serif;
    text-align:left;
    color:black;
    font-weight:normal;
    border-bottom: 1px solid #CACACA;
  }
  .row {
    margin: 0;
    p a {
      text-decoration: underline;
    }
  }
  .close-modal {
    float: right;
    background-color: #fff;
    width: 30px;
    height: 30px;
    float: right;
    padding: 0;
    margin: 0;
    a {
      @extend .with-icon;
      @extend .icon-close;
      color: black;
      font-size: 30px;
      text-decoration: none;
    }
  }
}
