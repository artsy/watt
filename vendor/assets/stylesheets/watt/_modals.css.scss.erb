.fancybox-wrap {
  .unit { 
    @extend .single-padding;
  }
  .fancybox-inner {
    padding-top: 40px;
    padding-bottom: 70px;
  }
}

.fancybox-inner {
  h2 {
    @extend .single-padding-bottom;
    @extend .single-margin-bottom;
    font-size: 26px;
    line-height: 26px;
    font-family:$serif;
    text-align:left;
    color:black;
    font-weight:normal;
  }
  .row {
    margin: 0;
    p a {
      text-decoration: underline;
    }
  }
  .modal {
    height: 100%;
    overflow: auto;
  }
  .modal-close {
    position: absolute;
    top: 0;
    right: 0;
    width: 26px;
    height: 26px;
    padding: 0;
    margin: 0;
    z-index: 3;
    a {
      @extend .with-icon;
      @extend .icon-close;
      color: black;
      font-size: 26px;
      text-decoration: none;
    }
  }
  .modal-header,
  .modal-footer {
    position: absolute;
    left: 0;
    width: 100%;
    background-color: white;
    z-index: 2;
  }
  .modal-header {
    top: 0;
    height: 40px;
  }
  .modal-content {
    overflow: hidden;
  }
  .modal-footer {
    bottom: 0;
    height: 70px;
  }
}
