main.full-width {
  padding: 80px 0;
}

main, section {
  .page-title.bordered {
    border-bottom: 1px solid #ddd;
    margin: 0 0 30px 0;
  }
  .page-title {
    padding: 0;
    margin: 0;
    h2 {
      font-size:26px;
      line-height: 26px;
      font-family:$serif;
      margin:20px 0 0 0;
      padding:0 0 20px;
      text-align:left;
      color:black;
      font-weight:normal;
      a {
        padding: 8px 14px 8px 48px;
        border: 1px solid $lightgrey;
        -webkit-border-radius: 2px;
        -moz-border-radius: 2px;
        border-radius: 2px;
        background-image: url('<%= asset_url 'watt/backarrow-34x23.png' %>');
        background-position: 18px 18px;
        background-repeat: no-repeat;
        background-size: 17px 12px;
        color: black;
      }
    }
  }


  .capped {
    max-width: 768px;
  }
  .results-sorts {padding: 0 0 60px 0;}

  .unit.bordered {
    border-top: 2px solid #eee;
  }

  .padded-row {
    margin: 0;
    padding: 0 0 30px 0;
  }

  .unit.single-padding {
    padding: 15px 0;
  }

  .unit.double-padding {
    padding: 30px 0;
  }

  .unit.triple-padding-top {
    padding-top: 45px !important;
  }

  .unit {
    margin: 0;
    padding: 0;
    strong {
      font-weight: normal;
      font-family:$sans-serif;
      text-transform: uppercase;
      font-size:14px;
      line-height: 24px;
    }
    .index-actions {
      text-align: right;
      background-color: #fff;
    }
    .index-action {
      float: right;
      background-color: #fff;
      width: 33px;
      height: 18px;
      float: right;
      padding: 0;
      margin: 5px 0 0 0;
      overflow:hidden;
      a {
        background:#fff url('<%= asset_url 'watt/arrow-18x33.png' %>') top left no-repeat;
        background-position: center;
        background-repeat: no-repeat;
        background-size: contain;
        width: 33px;
        height: 18px;
        float: right;
        text-indent:-999px;
      }
    }
    .selected-text-block {
      display: inline-block;
      *display: inline;
      /* IE7 inline-block hack */
      *zoom: 1;
      padding: 0;
      font-size: 10px;
      line-height: 12px;
      margin-bottom: 0;
      font: {
        weight: normal;
        family: $sans-serif;
      }
      text-align: center;
      vertical-align: middle;
      background-color: $buttonbackground;
      border-width: 4px;
      border-style: solid;
      border-color: transparent;
      text-transform:uppercase;
      font-weight:normal;
    }
  }//#.index-unit

  .custom-pagination {
    border-top: 2px solid #ddd;
    padding: 15px 0 0 0;
    margin: 15px 0 0 0;
    .previous-arrow,
    .next-arrow {
      font-size: 12px;
      font-family:$sans-serif;
      text-transform: uppercase;
    }
    .next-arrow-icon {
      padding-left: 4px;
    }
    .previous-arrow-icon {
      padding-right: 4px;
    }
  }
}//#main
