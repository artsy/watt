body.interface_layout {
  #interface-wrap {
    padding-left: 180px;
    transition: all 0.4s ease 0s;
  }
  section#sidebar {
    margin-left: -180px;
    left: 180px;
    width: 180px;
    background-color:#fff;
    position: fixed;
    height: 100%;
    overflow-y: auto;
    z-index: 1000;
    transition: all 0.4s ease 0s;
    .navigation {
      position: absolute;
      top: 56px;
      width: 180px;
      list-style: none;
      margin: 0;
      padding: 0;
      ul {
        padding: 84px 0 30px 0;
        border-right: 1px solid #CACACA;
        font-family: $sans-serif;
        text-transform: uppercase;
        li {
          a {
            color: black;
            background-color: #fff;
          }
          a:hover {
            color: black;
            background-color: #eee;
          }
        }
        li.active {
          a {
            color: black;
            background-color: #ddd;
          }
        }
      }
    }//.navigation
      .sidebar-help {
        position: absolute;
        bottom: 15px;
        left: 15px;
        width: 150px;
        a {
          height: 45px;
          line-height: 45px;
          display: block;
          padding: 0 0 0 50px;
          background-size: 45px 45px;
          background-position: 0px 0px;
          background-repeat: no-repeat;
          font-family: $sans-serif;
          text-transform: uppercase;
          font-size: 11px;
        }
      }
  }

  section#primary {
    width: 100%;
    .inset {
      padding: 75px 20px;
      max-width: 1024px;
    }
  }

@media (max-width:767px) {
    #interface-wrap {
      padding-left: 0;
    }
    section#sidebar {
      left: 0;
    }
    section#primary {
    width: 100%;
      .inset {
        padding: 60px 15px;
      }
    }
  }
}
