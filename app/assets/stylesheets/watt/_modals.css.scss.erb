.fancybox-inner {
  h2 {
  	font-size:22px;
  	line-height: 22px;
    padding: 0 0 30px 0;
  	font-family:$serif;
  	text-align:left;
  	color:black;
  	font-weight:normal;
    border-bottom: 1px solid #CACACA;
  }
  .close-modal {
  	float: right;
    background-color: #fff;
    width: 22px;
    height: 22px;
    float: right;
    padding: 0;
    margin: 0;
    overflow:hidden;
    a {
      background:#fff url('<%= asset_url 'watt/x-44x44.png' %>') top left no-repeat;
      background-position: center;
      background-repeat: no-repeat;
      background-size: contain;
      width: 22px;
      height: 22px;
      float: right;
      text-indent:-999px;
    }
  }

}

