      %a.brand{ href: '/' }= partial 'svgs/mark'
      %a.nav-application-name Style Guide
      .nav
        .dropdown-toggle
          Dropdown |
          %ul.dropdown-menu
            %li
              %a{ href: '/elements/navigation' } Dropdown Item
            %li
              %a{ href: '/elements/navigation' } Dropdown Item
