        .dropdown-toggle
          Dropdown Right |
          %ul.dropdown-menu{ data: { anchor: 'right' } }
            %li
              %a{ href: '/elements/navigation' } Dropdown Item
            %li
              %a{ href: '/elements/navigation' } Dropdown Item

