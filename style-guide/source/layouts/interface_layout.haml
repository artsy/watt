!!!
%html{lang: 'en'}
  %head
    %meta{charset: 'utf-8'}
    %meta{http_equiv:"X-UA-Compatible", content:"IE=edge"}
    %title= current_page.data.title || ''
    %meta{name: 'description', content: ''}
    %meta{name: 'author', content: ''}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    :plain
        <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
            <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->

    %link{href: '/stylesheets/style.css', type: 'text/css', rel: 'stylesheet' }
    %script{type: 'text/javascript', src: 'https://fast.fonts.net/jsapi/f7f47a40-b25b-44ee-9f9c-cfdfc8bb2741.js'}

  %body#rotation-app{ class: "interface_layout #{page_classes}" }
    %header.navbar.navbar-default.navbar-fixed-top.navbar-inverse{role: 'navigation'}
      .navbar-header
        %button.navbar-toggle{data: {target: '.navbar-collapse', toggle: 'collapse'}, type: 'button'}
          %span.sr-only
            Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{href: '/'}
      .navbar-collapse.collapse
        %form#navbar-search.navbar-form.navbar-left{ role: "Search" }
          .form-group
            %input{ type: "text", class: "form-control", placeholder: "Search" }
        %ul.nav.navbar-nav.hidden-lg.hidden-md.hidden-sm
          - ['dashboard','artists','inventory','shows','orders'].each do |nav_item|
            %li{class: ( 'active' if nav_item.include? 'artists' ) }
              %a{ href: "/interface/items"}
                = nav_item
        = partial "layouts/nav"

    #interface-wrap
      %section#sidebar
        .navigation
          %ul.nav.nav-pills.nav-stacked.sidebar-nav
            - ['dashboard','artists','inventory','shows','orders'].each do |nav_item|
              %li{class: ( 'active' if nav_item.include? 'dashboard' ) }
                %a{ href: "/interface/items"}
                  = nav_item
        .sidebar-help
          .help-image-link-wrap
            %a{ href: '#' }
              %span{ style: "background-image: url('https://d32dm0rphc51dk.cloudfront.net/I-3aUy98awMe9DKVatJPEw/square140.png');" }
              Need Help?
      %section#primary
        = yield

    %footer
      .footer-help
        %a{ href: '#' }
          %span{ style: "background-image: url('https://d32dm0rphc51dk.cloudfront.net/I-3aUy98awMe9DKVatJPEw/square140.png');" }
          Need Help?

    / Placed at the end of the document so the pages load faster
    %script{type: 'text/javascript', src: 'http://code.jquery.com/jquery.js'}
    %script{type: 'text/javascript', src: '/javascripts/main.js'}
